<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@drawable/white_textview_shape"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="200dp">

        <TextView
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预算总金额"
            android:textSize="15dp"
            />

        <EditText
            android:id="@+id/et_addmoeny"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:inputType="number"
            android:background="@null"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_E7E7E7"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_Determine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/m8"
                android:paddingBottom="@dimen/m8"
                android:layout_weight="1"
                android:text="返回"
                android:gravity="center"
                android:textSize="@dimen/m18"
                android:textColor="@color/colorGray8b"
                />
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_E7E7E7"
            />
            <TextView
                android:id="@+id/tv_Sure"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/m8"
                android:paddingBottom="@dimen/m8"
                android:layout_weight="1"
                android:text="确定"
                android:gravity="center"
                android:textSize="@dimen/m18"
                android:textColor="@color/color_FE6B6B"
            />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
