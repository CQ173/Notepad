<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F8F8F8"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/color_FE6B6B"
        android:textColor="@color/white"
        android:text="统计"
        android:gravity="center"
        android:textSize="15dp"/>

    <com.hackerfj.loansupermarket.view.widget.PieChartView
        android:id="@+id/pieChartView"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="200dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <android.support.design.widget.TabLayout
                    android:id="@+id/tab"
                    app:tabSelectedTextColor="@color/colorBlack30"
                    app:tabTextColor="@color/colorGray8b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tabIndicatorColor="@color/color_FE6B6B"
                    />
            </LinearLayout>
            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"/>


</LinearLayout>